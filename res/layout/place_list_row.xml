<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/row_layout"
	android:background="#333333"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

        <TextView android:id="@+id/row_placename"
            android:textSize="16sp"
			android:textColor="#e8a317"
            android:textStyle="bold"
			android:paddingLeft="5dip"
			android:paddingTop="5dip"
			 android:text="asdas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_toRightOf="@+id/row_placeid"/>
                 
              <TextView android:id="@+id/row_placeaddress"
            android:textSize="12sp"
			android:textColor="#FFFFFF"
			 android:text="asda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:padding="5dip"
        	android:layout_below="@+id/row_placename"/>
                     <TextView android:id="@+id/row_placedistance"
            android:textSize="12sp"
			android:textColor="#FFFFFF"
			 android:text="asdasd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:padding="5dip"
        	android:layout_below="@+id/row_placeaddress"/>       
        
</RelativeLayout>